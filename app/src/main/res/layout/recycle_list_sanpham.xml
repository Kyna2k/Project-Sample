<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:clickable="true"
    android:id="@+id/list_car"
    app:cardElevation="0dp"
    android:tag="chonlaysach"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:fontFamily="@font/magistral_bold"
            android:id="@+id/xephang"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_marginStart="10dp"
            android:id="@+id/hinhsach"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:background="#EEEE"
            android:padding="5dp"
            app:layout_constraintStart_toEndOf="@+id/xephang"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tensach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/magistral_bold"
            android:padding="2dp"
            android:layout_marginStart="12dp"
            android:maxLength="20"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/hinhsach"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tentacgia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_chil"
            app:layout_constraintStart_toStartOf="@+id/tensach"
            app:layout_constraintTop_toBottomOf="@+id/tensach" />

        <TextView
            android:id="@+id/soluong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/text_color_chil"
            app:layout_constraintStart_toStartOf="@+id/tensach"
            app:layout_constraintTop_toBottomOf="@+id/tentacgia" />


        <TextView
            android:id="@+id/giathue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/magistral_bold"
            android:textColor="@color/color_app2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tensach"/>

        <ImageView
            android:id="@+id/btn_moreinfo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_baseline_info_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/hinhNXB"
            android:layout_width="28dp"
            android:layout_height="27dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>